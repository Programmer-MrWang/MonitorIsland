<abstractions:MonitorProviderControlBase
    x:Class="MonitorIsland.Controls.MonitorProviderSettingsControls.NetworkTrafficSettingsControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:abstractions="using:MonitorIsland.Abstractions"
    xmlns:ci="http://classisland.tech/schemas/xaml/core"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MonitorIsland.Controls.MonitorProviderSettingsControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:providersettings="clr-namespace:MonitorIsland.Models.MonitorProviderSettings"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="providersettings:NetworkTrafficSettings"
    Loaded="NetworkTrafficSettingsControl_Loaded"
    mc:Ignorable="d">
    <Panel DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:NetworkTrafficSettingsControl}}">
        <StackPanel Spacing="8">
            <controls:SettingsExpander
                Header="网卡"
                Description="选择要监控的网络接口"
                IconSource="{ci:FluentIconSource &#xEAB6;}">
                <controls:SettingsExpander.Footer>
                    <ComboBox
                        MinWidth="200"
                        MaxWidth="300"
                        ItemsSource="{Binding Settings.AvailableInterfaces}"
                        SelectedValue="{Binding Settings.SelectedInterfaceId, Mode=TwoWay}"
                        SelectedValueBinding="{Binding Id}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type providersettings:NetworkInterfaceInfo}">
                                <TextBlock Text="{Binding DisplayText}" TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:SettingsExpander.Footer>
            </controls:SettingsExpander>
        </StackPanel>
    </Panel>
</abstractions:MonitorProviderControlBase>